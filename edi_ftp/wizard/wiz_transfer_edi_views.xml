<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <record id="wiz_ftp_edi" model="ir.ui.view">
        <field name="name">wiz.ediftp.form1</field>
        <field name="model">wiz.edi.ftp</field>
        <field name="arch" type="xml">
            <form string="EDI FTP">
                
                <group attrs="{'invisible': [('edi_select', '=', 'Import_Sale')]}" >
                    <separator string="Periods"/>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <group/>
                </group>
                
               
                <group attrs="{'invisible': [('edi_select', '=', 'Import_Sale')]}" >
                    <separator string="EDI"/>
                    <group>
                        <field string="Invoice File EDI" name="invoice_file_edi" attrs="{'invisible': [('edi_select', '!=', 'Invoice')]}"/>
                        <field string="Sale File EDI" name="sale_file_edi" attrs="{'invisible': [('edi_select', '!=', 'Sale')]}"/>
                        <field string="Retransfer" name="re_transfer" attrs="{'invisible': [('edi_select', '=', 'Import_Sale')]}"  />
                        <field string="edi_select" name="edi_select" invisible="1"/>
                    </group>
                </group>

                <footer>
                    <button string="Invoice EDI" type="object" name="edi_invoice" attrs="{'invisible': [('edi_select', '!=', 'Invoice')]}"   default_focus="1" class="oe_link"/>
                    <button string="Sale EDI" type="object" name="edi_sale" attrs="{'invisible': [('edi_select', '!=', 'Sale')]}"   default_focus="1" class="oe_link"/>
                    
                    <button string="Import Sale EDI" type="object" name="edi_sale_import" attrs="{'invisible': [('edi_select', '!=', 'Import_Sale')]}"   default_focus="1" class="oe_link"/>
                        
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

 
    <record id="action_miadi_invoice_edi" model="ir.actions.act_window">
        <field name="name">Invoice EDI</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wiz.edi.ftp</field>
        <field name="view_id" ref="wiz_ftp_edi"/>        
        <field name="view_mode">form</field>
        <field name="context">{'default_edi_select': 'Invoice'}</field>
      
        <field name="target">new</field>
    </record> 
 
    <record id="action_miadi_sale_edi" model="ir.actions.act_window">
        <field name="name">Sale EDI</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wiz.edi.ftp</field>
        <field name="view_id" ref="wiz_ftp_edi"/>        
        <field name="view_mode">form</field>
        <field name="context">{'default_edi_select': 'Sale'}</field>
      
        <field name="target">new</field>
    </record> 
    
        <record id="action_miadi_import_sale_edi" model="ir.actions.act_window">
        <field name="name">Sale EDI</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wiz.edi.ftp</field>
        <field name="view_id" ref="wiz_ftp_edi"/>        
        <field name="view_mode">form</field>
        <field name="context">{'default_edi_select': 'Import_Sale'}</field>
      
        <field name="target">new</field>
    </record> 
    </data>
 
</odoo>
