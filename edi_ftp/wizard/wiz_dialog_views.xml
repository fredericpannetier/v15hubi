<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="wiz_display_dialog_form" model="ir.ui.view">
		<field name="name">wiz.displaydialog.form</field>
		<field name="model">wiz.dialog</field>
		<field name="arch" type="xml">
			<form string="Confirm Dialog">
			    <div class="oe_title">
                    <!--<label for="confirm_message" />-->
                    <h2>
                    
                        <field name="confirm_message"  colspan="6" readonly="1"/>
                    </h2>
                    <separator />
                    <!--<label for="code_message" />  -->
                    <h2>
                        <field name="code_message"  colspan="6" readonly="1" invisible="1"/>
                        <field name="id_edi"  colspan="6" readonly="1" invisible="1"/>
                        <field name="filename_edi"  colspan="6" readonly="1" invisible="1"/>
                    </h2>
                    <separator />
				</div>
				<footer>
				    <button name= "wiz_write_file_invoice" string="Copy"  type="object" attrs="{'invisible': [('code_message', '!=', 'file-invoice')]}" class="oe_link"/>
				    <button name= "wiz_write_file_sale" string="Copy"  type="object" attrs="{'invisible': [('code_message', '!=', 'file-sale')]}" class="oe_link"/>
					<button string="Cancel" special="cancel" class="oe_link"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_wiz_dialog" model="ir.actions.act_window">
        <field name="name">Display Dialog</field>
        <field name="res_model">wiz.dialog</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        
    </record> 



</odoo>
