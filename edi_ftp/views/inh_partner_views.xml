<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_partner_customer_edi" model="ir.ui.view">
            <field name="name">partner.customer</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field eval="90" name="priority"/>
            <field name="arch" type="xml">
            
                <!-->
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="di_code_ean" />
                </xpath>
                -->
                <xpath expr="//page[@name='internal_notes']" position="before">
                    <page name="EDI" string="EDI" >
                        <group name="EDI_invoice" string="EDI Invoice">
                            <group name="EDI_invoice_row_1">
                                <field name="di_code_ean" />
                                <field name="di_edi_invoice" />
                                <field name="di_edi_transport_recipient" />
                                <!-- CLAM - Ajout des deux champs -->
                                <field name="di_code_ean_factor" />
                                <field name="di_name_factor" />
                                
                            </group>
                            <group name="EDI_invoice_row_2" attrs="{'invisible': [('di_edi_invoice', '=', False)]}">
                                <field name="di_edi_invoice_prod" />
                                <!-->
                                <field name="di_order_code_ean" />
                                <field name="di_order_name" />  -->
                            </group>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//page[@name='contact_addresses']/field[@name='child_ids']/form/sheet/group/group/field[@name='mobile']" position="after">
                    <field name="di_code_ean" attrs="{'invisible': [('type', '!=', 'delivery')]}"/>
                </xpath>
                
            </field>
        </record>
        
  
    
    </data>
</odoo>
