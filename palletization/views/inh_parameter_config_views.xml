<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="res_config_settings_palettization_form" model="ir.ui.view">
    <field name="name">Config Settings for Palettization</field>
    <field name="model">res.config.settings</field>
    <!--<field name="priority" eval="90"/>-->
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]" position="inside">
            <div class="app_settings_block" data-string="Palettization" string="Palettization" data-key="palettization" groups="sales_team.group_sale_manager">
            <t groups="sales_team.group_sale_manager">
                <h2>Palettization</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="These values are default values for Palettization">
                        <div class="o_setting_left_pane">
                        </div>
                        
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Default Values</span>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                            <div class="text-muted">
                                Default values for Palettization
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    
                                    <label string="Pallet type default" for="di_pallet_type_default_id" class="col-lg-5 o_light_label"/>
                                    <field name="di_pallet_type_default_id" />
                                    <button name="open_type_pallet" icon="fa-arrow-right" type="object" string="Manage Pallets" class="btn-link o_web_settings_access_rights"/>
                                    
                                    <!-->
                                    <label string="Pallet type 1" for="di_pallet_type_1" class="col-lg-5 o_light_label"/>
                                    <field name="di_pallet_type_1" />
                                    <label string="Pallet type 2" for="di_pallet_type_2" class="col-lg-5 o_light_label"/>
                                    <field name="di_pallet_type_2" />
                                    <label string="Pallet type 3" for="di_pallet_type_3" class="col-lg-5 o_light_label"/>
                                    <field name="di_pallet_type_3" />
                                    
                                    <label string="Printer for Pallet Etiquette" for="di_etiq_pallet_printer_id" class="col-lg-5 o_light_label"/>
                                    <field name="di_etiq_pallet_printer_id" />
                                    <label string="Etiquette model for Pallet Etiquette" for="di_etiq_pallet_model_id" class="col-lg-5 o_light_label"/>
                                    <field name="di_etiq_pallet_model_id" />
                                    -->
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </t>
            </div>
        </xpath>
    </field>
</record> 
  
    <record id="palettization_action_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_palettization_form" />
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'palletization'}</field>
    </record>      
   
 
</odoo>
