                            <label for="di_default_pallet_qty_1" string=""/>
                            <field name="di_default_pallet_qty_1" nolabel="1" />
                        </div>

                        <div class="o_row" name="pallet_qty_2">
                            <label for="di_pallet_type_2" string="Default quantity on pallet "/>
                            <field name="di_pallet_type_2" />
                            
                            <field name="di_default_pallet_qty_2" nolabel="1" />
                        </div>

                        <div class="o_row" name="pallet_qty_3">
                            <label for="di_pallet_type_3" string="Default quantity on pallet "/>
                            <field name="di_pallet_type_3" />
                            
                            <field name="di_default_pallet_qty_3" nolabel="1"/>
                        </div>
                        </group>
                        -->
                        
                    </group> 
                </page>    
            </xpath>  
        </field>
    </record>


 
</odoo>
